# Congressional Data Validation Service Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/congress_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Service Configuration
SERVICE_NAME=congressional-data-validation
SERVICE_VERSION=0.1.0
SERVICE_ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=1

# Great Expectations Configuration
GE_DATA_CONTEXT_ROOT=./great_expectations
GE_STORE_BACKEND=filesystem

# Dagster Configuration
DAGSTER_HOME=./dagster_home
DAGSTER_POSTGRES_HOST=localhost
DAGSTER_POSTGRES_PORT=5432
DAGSTER_POSTGRES_DB=dagster
DAGSTER_POSTGRES_USER=dagster_user
DAGSTER_POSTGRES_PASSWORD=dagster_password

# Schema Configuration
SCHEMA_VERSION=v20250708
STAGING_SCHEMA=staging
PRODUCTION_SCHEMA=public

# Pipeline Configuration
PIPELINE_BATCH_SIZE=1000
PIPELINE_TIMEOUT_SECONDS=3600
PIPELINE_RETRY_ATTEMPTS=3

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8003
LOG_LEVEL=INFO