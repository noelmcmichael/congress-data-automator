# Congressional Data API Service - Production Environment Template
# Copy this file to .env.production and fill in the actual values

# Environment
ENVIRONMENT=production

# Database Configuration (Required - set these to your production database)
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=4

# Security (Required - generate secure values)
SECRET_KEY=your-super-secure-secret-key-here-at-least-32-characters-long
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_BURST=200

# Caching
CACHE_TTL=1800
CACHE_ENABLED=true

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Performance
UVICORN_WORKERS=4
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=true
LOG_RETENTION=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSRF_PROTECTION=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# API Documentation (disable in production)
DEBUG=false