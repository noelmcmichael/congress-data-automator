# Congressional Data API Service Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/congress_data
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=4
API_RELOAD=false

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://storage.googleapis.com"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Caching
CACHE_TTL=3600
CACHE_ENABLED=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# API Versioning
API_VERSION_PREFIX=/api/v1
API_TITLE=Congressional Data API
API_DESCRIPTION=Enterprise-grade read-only API for congressional data
API_VERSION=1.0.0

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30