# Congressional Data API Service - Staging Configuration

# Environment
ENVIRONMENT=staging
LOG_LEVEL=DEBUG
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=2
API_RELOAD=false

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=true

# CORS Configuration (relaxed for testing)
CORS_ORIGINS=["http://localhost:3000", "https://staging.congress-data-api.com"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Rate Limiting (relaxed for testing)
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_PERIOD=60
RATE_LIMIT_BURST=400

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Caching (shorter TTL for testing)
CACHE_TTL=300
CACHE_ENABLED=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=5

# API Configuration
API_VERSION_PREFIX=/api/v1
API_TITLE=Congressional Data API (Staging)
API_DESCRIPTION=Staging Congressional Data API Service
API_VERSION=1.0.0

# Security
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Performance (reduced for staging)
UVICORN_WORKERS=2
UVICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
UVICORN_MAX_REQUESTS=500
UVICORN_MAX_REQUESTS_JITTER=50

# Logging (verbose for debugging)
LOG_FORMAT=pretty
LOG_ROTATION=false
LOG_RETENTION=7